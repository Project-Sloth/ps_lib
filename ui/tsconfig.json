{
	"compilerOptions": {
		"target": "es2020",
		"module": "amd",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true,
		"outFile": "./dist/ps_lib.js",
		"types": ["@citizenfx/client"],
		"lib": ["es2020", "dom"]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist", "**/*.d.ts"]
}
